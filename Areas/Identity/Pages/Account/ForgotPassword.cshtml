@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Your Password?";
}

@section Styles {
    <link rel="stylesheet" href="~/css/aspnet-validation.css" />
}

<h1>@ViewData["Title"]</h1>

<h2>Note</h2>
<p>
    Emails from this site are sent via a commercial mail-relaying service.
    Be sure to check your spam folder if the password-reset link
    fails to appear in your main inbox.
</p>

<h2>Enter Your Email</h2>
<hr />
<div>
   <div class="std-form">
       <form method="post">
           <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
           <div class="std-form-control">
               <label asp-for="Input.Email" class="std-label top"></label><br/>
               <input asp-for="Input.Email" class="std-text-input" autocomplete="username" aria-required="true" placeholder="name@example.com" />
               <span asp-validation-for="Input.Email" class="text-danger"></span>
           </div>
           <div class="std-form-control">
               <button class="std-button" type="submit">Reset Password</button>
           </div>
       </form>
   </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
