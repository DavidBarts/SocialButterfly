@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

@section Styles {
    <link rel="stylesheet" href="~/css/aspnet-validation.css" />
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <div class="std-form">
        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="std-form-control">
                <label asp-for="Input.OldPassword" class="std-label top"></label><br/>
                <input asp-for="Input.OldPassword" class="std-text-input" autocomplete="current-password" aria-required="true" placeholder="old password" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="std-form-control">
                <label asp-for="Input.NewPassword" class="std-label top"></label><br/>
                <input asp-for="Input.NewPassword" class="std-text-input" autocomplete="new-password" aria-required="true" placeholder="new password" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="std-form-control">
                <label asp-for="Input.ConfirmPassword" class="std-label top"></label><br/>
                <input asp-for="Input.ConfirmPassword" class="std-text-input" autocomplete="new-password" aria-required="true" placeholder="confirm new password"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="std-form-control">
                <button class="std-button" type="submit">Update password</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
