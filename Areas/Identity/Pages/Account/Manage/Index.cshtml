@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

@section Styles {
    <link rel="stylesheet" href="~/css/aspnet-validation.css" />
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <div class="std-form">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="std-form-control">
                <label asp-for="Username" class="std-label top"></label><br/>
                <input asp-for="Username" class="std-text-input" placeholder="username" disabled />
            </div>
            <div class="std-form-control">
                <label asp-for="Input.PhoneNumber" class="std-label top"></label><br/>
                <input asp-for="Input.PhoneNumber" class="std-text-input" placeholder="phone number"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="std-form-control">
                <button class="std-button" id="update-profile-button" type="submit">Save</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
